<h1 class='white-font'>Log In</h1>

<%= form_tag sessions_path do %>
        <%= label_tag :email, 'Email', class: 'white-font'  %>
        <%= text_field_tag :email, nil, class: 'form-control' %>
        <%= label_tag :password, 'Password', class: 'white-font'  %>
        <%= password_field_tag :password, nil, class: 'form-control' %>
        <%= label_tag :remember_me, nil, class: 'white-font'  %>
        <%= check_box_tag :remember_me, 1, params[:remember_me] %>
    <div class="actions" >
        <%= link_to "I forgot my password", password_resets_path, class: 'btn btn-default btn-lg outline' %>
        <%= submit_tag "Login", class: 'btn btn-default btn-lg outline'%>
    </div>
</div>
<% end %>
