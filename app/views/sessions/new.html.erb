<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="">
  <meta name="author" content="">
  <title>NewCap - Login</title>
  <%= render 'layouts/header' %>

  <link href='http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700'
      rel='stylesheet' type='text/css'>
  <link rel="shortcut icon" href="#">
</head>

<body>
  <section id="signup">
    <div class="container">
      <div class="row">
        <div class="heading text-center col-sm-8 col-sm-offset-2 wow fadeInUp"
            data-wow-duration="1200ms" data-wow-delay="300ms">
          <h2>Login</h2>
          <p>Faça login para acessar suas informações</p>
        </div>

        <%= form_tag sessions_path do %>
            <div class="buttonHolder">
                <%= text_field_tag :email, nil, placeholder: 'E-mail'  %>
                <%= password_field_tag :password, nil, placeholder: 'Senha' %>
                <%= check_box_tag :remember_me, 1, params[:remember_me],
                    class: 'checboxCustom' %>
                <%= label_tag :remember_me, nil, class: 'checboxCustom'%>
                <%= link_to "Esqueci minha senha", password_resets_path %>
                <%= submit_tag "Login"%>
            </div>

      </div>
      <% end %>
    </div>
  </section>
</body>
