<h1><h1 class='white-font'>Reset Password</h1>

<%= form_tag password_resets_path, :method => :post do%>
    <div class="row ">
        <div class="field col-md-2 col-md-offset-3">
            <%= label_tag :email, "E-mail:", class: 'white-font' %>
        </div>
        <div class="field col-md-2">
            <%= text_field_tag :email, params[:email] %>
        </div>
    </div>

    <div class="actions" >
        <%= submit_tag "Reset Password", class: 'btn btn-default btn-lg outline'%>
    </div>
<% end %>
