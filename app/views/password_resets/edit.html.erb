<h1>Reset Password</h1>

<%= render 'form' %>

<%= form_for @user, :url => password_reset_path(params[:id]) do |f| %>
    <div class="row ">
        <div class="field col-md-2 col-md-offset-3">
            <%= f.label :password, "Password:", class: 'white-font' %>
        </div>
        <div class="field col-md-2">
            <%= f.password_field :password, class: 'form-control' %>
        </div>
    </div>
    <div class="row ">
        <div class="field col-md-2 col-md-offset-3">
            <%= f.label :password_confirmation, "Password Confirmation:",
            class: 'white-font' %>
        </div>
        <div class="field col-md-2">
            <%= f.password_field :password_confirmation,
            class: 'form-control' %>
        </div>
    </div>

    <div class="actions" >
        <%= f.submit "Submit new password ", class: 'btn btn-default btn-lg outline'%>
    </div>
<% end %>
